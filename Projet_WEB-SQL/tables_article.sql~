CREATE TABLE IF NOT EXISTS MEMBRES (
  `id` int(2) NOT NULL AUTO_INCREMENT,
  `login` varchar(100) NOT NULL,
  `email` varchar(100),
  `pass` varchar(255),
  `droit` tinyint(4) NOT NULL,
  `valide` tinyint(4) NOT NULL,
  PRIMARY KEY (`id`)
);

