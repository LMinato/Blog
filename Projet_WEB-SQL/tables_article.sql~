CREATE TABLE ARTICLES (
    id INT UNSIGNED AUTO_INCREMENT PRIMARY KEY,
    id_theme int,
    id_membre int,
    titre  VARCHAR(255),
    contenu TEXT,
    date_creation DATETIME DEFAULT NULL,
    date_modification DATETIME DEFAULT NULL /*date et heure de la dernière modification de l'article.*/
);

